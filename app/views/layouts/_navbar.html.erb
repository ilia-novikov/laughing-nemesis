<header>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container-fluid">
				<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%= link_to "Manager of e-books", home_path, :class=>"brand" %>
				<div class="nav-collapse collapse">
					<ul class="nav">
						<li class=<%= header_active["Home"].to_s %>><%= link_to "Home", home_path %></li>
						<li class=<%= header_active["About"].to_s %>><%= link_to "About", about_path %></li>
						<li class=<%= header_active["Contact"].to_s %>><%= link_to "Contact", contact_path %></li>
					</ul>
					<ul class="nav pull-right">
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#">Profile <b class="caret"></b></a>
							<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel" style="padding: 5px">
								<% if signed_in? %>
								<li style="text-align: center">
									<h6><%= gravatar_image_tag current_user.email, :class => "img-circle", :style => "width: 30px" %> <%= current_user.name %></h6>
								</li>
								<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
								<% else %>
								<li><%= link_to "Sign in", signin_path %></li>
								<li><%= link_to "Sign up", signup_path %></li>
								<% end %>					
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</header>